<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ARGENTINE BALANCE SHEET -->

        <record id="account_financial_report_balance_l10n_ar" model="account.financial.html.report">
            <field name="name">Balance Argentino</field>
            <field name="debit_credit" eval="False"/>
            <field name="date_range" eval="False"/>
            <field name="analytic" eval="True"/>
            <field name="unfold_all_filter" eval="True"/>
            <field name='parent_id' ref='account.account_reports_legal_statements_menu'/>
        </record>

        <record id="account_financial_report_total_act" model="account.financial.html.report.line">
            <field name="name">ACTIVO</field>
            <field name="code">ACT</field>
            <field name="financial_report_id" ref="account_financial_report_balance_l10n_ar"/>
            <field name="formulas">balance = 100</field>
            <field name="sequence" eval="1"/>
            <field name="level" eval="0" />
        </record>
        <record id="account_financial_report_aco" model="account.financial.html.report.line">
            <field name="name">Activo Corriente</field>
            <field name="code">ACO</field>
            <field name="parent_id" ref='account_financial_report_total_act'/>
            <field name="formulas">balance = 10</field>
            <field name="sequence" eval="1"/>
            <field name="level" eval="1" />
        </record>
        <record id="account_financial_report_cba" model="account.financial.html.report.line">
            <field name="name">Caja y Bancos</field>
            <field name="code">CBA</field>
            <field name="parent_id" ref='account_financial_report_aco'/>
            <field name="domain" eval="[('account_id.user_type_id', '=', ref('account.data_account_type_liquidity'))]" />
            <field name="groupby">account_id</field>
            <field name="formulas">balance = sum.balance</field>
            <field name="sequence" eval="1"/>
            <field name="level" eval="2" />
        </record>

        <record id="account_financial_report_total_pas" model="account.financial.html.report.line">
            <field name="name">PASIVO</field>
            <field name="code">PAS</field>
            <field name="financial_report_id" ref="account_financial_report_balance_l10n_ar"/>
            <field name="formulas">balance = 200</field>
            <field name="sequence" eval="1"/>
            <field name="level" eval="0" />
        </record>
        <record id="account_financial_report_pco" model="account.financial.html.report.line">
            <field name="name">Pasivo Corriente</field>
            <field name="code">PCO</field>
            <field name="parent_id" ref='account_financial_report_total_pas'/>
            <field name="formulas">balance = 10</field>
            <field name="sequence" eval="1"/>
            <field name="level" eval="1" />
        </record>
        <record id="account_financial_report_dcom" model="account.financial.html.report.line">
            <field name="name">Deudas Comerciales</field>
            <field name="code">DCOM</field>
            <field name="parent_id" ref='account_financial_report_pco'/>
            <field name="domain" eval="[('account_id.user_type_id', '=', ref('account.data_account_type_liquidity'))]" />
            <field name="groupby">account_id</field>
            <field name="formulas">balance = sum.balance</field>
            <field name="sequence" eval="1"/>
            <field name="level" eval="2" />
        </record>

        <record id="account_financial_report_total_pane" model="account.financial.html.report.line">
            <field name="name">PATRIMONIO NETO</field>
            <field name="code">PANE</field>
            <field name="financial_report_id" ref="account_financial_report_balance_l10n_ar"/>
            <field name="formulas">balance = 300</field>
            <field name="sequence" eval="1"/>
            <field name="level" eval="0" />
        </record>
        <record id="account_financial_report_capital" model="account.financial.html.report.line">
            <field name="name">Capital</field>
            <field name="code">CAPITAL</field>
            <field name="parent_id" ref='account_financial_report_total_pane'/>
            <field name="domain" eval="[('account_id.user_type_id', '=', ref('account.data_account_type_liquidity'))]" />
            <field name="groupby">account_id</field>
            <field name="formulas">balance = sum.balance</field>
            <field name="sequence" eval="1"/>
            <field name="level" eval="1" />
        </record>

        <record id="account_financial_report_gabru" model="account.financial.html.report.line">
            <field name="name">GANANCIA BRUTA</field>
            <field name="code">GABRU</field>
            <field name="financial_report_id" ref="account_financial_report_balance_l10n_ar"/>
            <field name="formulas">balance = 300</field>
            <field name="sequence" eval="1"/>
            <field name="level" eval="0" />
        </record>
        <record id="account_financial_report_rai" model="account.financial.html.report.line">
            <field name="name">RESULTADO ANTES DEL IMPUESTO</field>
            <field name="code">RAI</field>
            <field name="financial_report_id" ref="account_financial_report_balance_l10n_ar"/>
            <field name="formulas">balance = 300</field>
            <field name="sequence" eval="1"/>
            <field name="level" eval="0" />
        </record>
        <record id="account_financial_report_ganeje" model="account.financial.html.report.line">
            <field name="name">GANANCIA DEL EJERCICIO</field>
            <field name="code">GANEJE</field>
            <field name="financial_report_id" ref="account_financial_report_balance_l10n_ar"/>
            <field name="formulas">balance = 300</field>
            <field name="sequence" eval="1"/>
            <field name="level" eval="0" />
        </record>


    </data>
</odoo>
